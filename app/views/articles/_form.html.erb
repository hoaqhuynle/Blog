      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :text %>
    <%= form.text_area :text, id: :article_text, class: 'form-control', rows: 10 %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, id: :article_picture %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: @article.user_id %>
  </div>

  <br>

  <div class="actions form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
